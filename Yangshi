<!-- 可选脚本(与 scripts.js 功能重复时，可酌情删除或保留) -->
<script>
/* 只保留一次 DOMContentLoaded */
document.addEventListener("DOMContentLoaded", function() {

  // ====================== 模块1：搜索逻辑、移动端菜单、桌面导航悬停、多级菜单搜索逻辑 ======================
  (function() {
    // 1) 搜索逻辑
    const body          = document.body;
    const mainHeader    = document.getElementById('mainHeader');
    const desktopSearch = document.getElementById('desktopSearchIcon');
    const mobileSearch  = document.getElementById('mobileSearchIcon');
    const searchPanel   = document.getElementById('searchPanel');
    const searchClose   = document.getElementById('searchClose');
    const searchTitle   = document.getElementById('searchTitle');
    const searchResults = document.getElementById('searchResults');

    // 模拟本网站可搜索内容 (示例)
    const siteContents = [
      { text: "About MeFan", url: "about.html" },
      { text: "MeFan Lite - Wireless Earbuds", url: "product-lite.html" },
      { text: "MeFan X1 - Noise Canceling Headphones", url: "product-x1.html" },
      { text: "MeFan Pro - Premium Audio", url: "product-pro.html" },
      { text: "Earbud Tips & Support", url: "support.html" },
      { text: "Contact Us", url: "contact.html" },
      { text: "Products Overview", url: "products.html" }
      // ...更多...
    ];

    function openSearch() {
      body.classList.add('search-open');
      searchTitle.textContent = "";
      searchResults.innerHTML = "";
    }
    function closeSearch() {
      body.classList.remove('search-open');
    }

    if (desktopSearch) desktopSearch.addEventListener('click', openSearch);
    if (mobileSearch)  mobileSearch.addEventListener('click', openSearch);
    if (searchClose)   searchClose.addEventListener('click', closeSearch);

    document.addEventListener('keydown', function(e){
      if (e.key === "Escape") {
        closeSearch();
      }
    });

    document.addEventListener('click', function(e){
      // 若点击在 searchPanel 外部，且不是搜索图标，就关闭
      if (
        searchPanel &&
        !searchPanel.contains(e.target) &&
        e.target !== desktopSearch &&
        e.target !== mobileSearch
      ) {
        closeSearch();
      }
    });

    // 当用户输入时，动态生成搜索结果
    if (searchTitle && searchResults) {
      searchTitle.addEventListener('input', function(){
        const query = searchTitle.innerText.trim().toLowerCase();
        if (!query) {
          searchResults.innerHTML = "";
          return;
        }
        const matched = siteContents.filter(item =>
          item.text.toLowerCase().includes(query)
        );
        searchResults.innerHTML = "";
        if (matched.length > 0) {
          matched.forEach(obj => {
            const div = document.createElement('div');
            div.classList.add('search-item');
            const link = document.createElement('a');
            link.href = obj.url;
            link.textContent = obj.text;
            link.style.textDecoration = "none";
            link.style.color = "#333";
            link.target = "_self";
            div.appendChild(link);
            searchResults.appendChild(div);
          });
        } else {
          const noRes = document.createElement('div');
          noRes.classList.add('no-result');
          noRes.textContent = "Sorry, no results found.";
          searchResults.appendChild(noRes);
        }
      });
    }
  })();

  (function () {
    // 2) 移动端菜单逻辑 (基础)
    const menuIcon  = document.getElementById('menuIcon');
    const closeBtn  = document.getElementById('closeBtn');
    const mobileNav = document.getElementById('mobileNav');

    if (menuIcon && closeBtn && mobileNav) {
      menuIcon.addEventListener('click', () => {
        mobileNav.classList.add('active');
      });
      closeBtn.addEventListener('click', () => {
        mobileNav.classList.remove('active');
      });
      document.querySelectorAll('#mobileNav ul li a').forEach(link => {
        link.addEventListener('click', () => {
          // 点击任意链接后关闭菜单
          mobileNav.classList.remove('active');
        });
      });
    }
  })();

  (function(){
    // 5) 桌面导航栏悬停 (Desktop Nav Hover)
    const header         = document.getElementById('mainHeader');
    const navLinks       = document.querySelectorAll('.desktop-nav .nav-list > li > a');
    const hoverOverlay   = document.getElementById('hover1Overlay');
    const hoverContent   = document.getElementById('hover1Content');
    const blurBg         = document.getElementById('blur1Bg'); // 模糊背景层

    const sectionsMap = {
      'Home':     document.getElementById('hover1Home'),
      'Products': document.getElementById('hover1Products'),
      'About':    document.getElementById('hover1About'),
      'Contact':  document.getElementById('hover1Contact')
    };

    function hideAllSections() {
      Object.values(sectionsMap).forEach(sec => sec && sec.classList.remove('active'));
    }

    function showHover() {
      if (!hoverOverlay || !hoverContent || !header) return;
      hoverOverlay.classList.add('active');
      hoverContent.classList.add('active');
      header.classList.add('nav-white'); // 导航变白
      if (blurBg) blurBg.classList.add('active'); // 显示模糊背景
    }

    function hideHover() {
      if (!hoverOverlay || !hoverContent || !header) return;
      hoverOverlay.classList.remove('active');
      hoverContent.classList.remove('active');
      header.classList.remove('nav-white');
      if (blurBg) blurBg.classList.remove('active'); // 隐藏模糊背景
      hideAllSections();
    }

    if (navLinks && hoverOverlay && hoverContent) {
      // 鼠标移到导航链接 => 显示对应悬停面板
      navLinks.forEach(link => {
        link.addEventListener('mouseenter', () => {
          const text = link.textContent.trim();
          hideAllSections();
          if (sectionsMap[text]) {
            sectionsMap[text].classList.add('active');
            showHover();
          } else {
            hideHover();
          }
        });
      });

      // 鼠标离开悬停面板 => 关闭
      hoverContent.addEventListener('mouseleave', () => {
        hideHover();
      });

      // 鼠标移动到遮罩层 => 关闭
      hoverOverlay.addEventListener('mousemove', () => {
        hideHover();
      });

      // 鼠标离开模糊背景层 => 关闭
      if (blurBg) {
        blurBg.addEventListener('mousemove', () => {
          hideHover();
        });
      }
    }
  })();

  (function(){
    // 6) 移动端多级菜单 (若需要)
    const mobileNav     = document.getElementById('mobileNav');
    const homePanel     = document.getElementById('mobileNavLevel2Home');
    const productsPanel = document.getElementById('mobileNavLevel2Products');
    const aboutPanel    = document.getElementById('mobileNavLevel2About');
    const contactPanel  = document.getElementById('mobileNavLevel2Contact');

    // 若这些面板不存在，就跳过
    if (!mobileNav || !homePanel || !productsPanel || !aboutPanel || !contactPanel) {
      console.log("多级菜单面板未找到，若不需要此功能可删除本脚本。");
      return;
    }

    function showSubPanel(panel){
      mobileNav.classList.remove('active');
      homePanel.classList.remove('active');
      productsPanel.classList.remove('active');
      aboutPanel.classList.remove('active');
      contactPanel.classList.remove('active');
      panel.classList.add('active');
    }
    function showMainNav(){
      homePanel.classList.remove('active');
      productsPanel.classList.remove('active');
      aboutPanel.classList.remove('active');
      contactPanel.classList.remove('active');
      mobileNav.classList.add('active');
    }
    const navLinks = mobileNav.querySelectorAll('ul li a');
    navLinks.forEach(link => {
      const level = link.getAttribute('data-level');
      if(level === 'home'){
        link.addEventListener('click', function(e){
          e.preventDefault();
          showSubPanel(homePanel);
        });
      } else if(level === 'products'){
        link.addEventListener('click', function(e){
          e.preventDefault();
          showSubPanel(productsPanel);
        });
      } else if(level === 'about'){
        link.addEventListener('click', function(e){
          e.preventDefault();
          showSubPanel(aboutPanel);
        });
      } else if(level === 'contact'){
        link.addEventListener('click', function(e){
          e.preventDefault();
          showSubPanel(contactPanel);
        });
      }
    });
    const backButtons = document.querySelectorAll('.menu-panel__back');
    backButtons.forEach(btn => {
      btn.addEventListener('click', function(e){
        e.preventDefault();
        showMainNav();
      });
    });
    const subCloseButtons = document.querySelectorAll('.menu-panel__close');
    subCloseButtons.forEach(btn => {
      btn.addEventListener('click', function(e){
        e.preventDefault();
        mobileNav.classList.remove('active');
        homePanel.classList.remove('active');
        productsPanel.classList.remove('active');
        aboutPanel.classList.remove('active');
        contactPanel.classList.remove('active');
      });
    });
  })();

  // ====================== 模块2：桌面端 & 移动端 Mefan Air 导航滚动切换 & 移动端上下翻功能 ======================
  (function(){
    const mainHeader = document.getElementById("mainHeader");
    const mefanAirWrap = document.getElementById("mefanAirWrap");
    const mobileAirNav = document.getElementById("mobileAirNav");

    window.addEventListener("scroll", function() {
      const scrollTop = window.scrollY || document.documentElement.scrollTop;
      const isMobile = window.innerWidth <= 768;
      if (!isMobile) {
        if (scrollTop > 400) {
          mainHeader.style.transform = "translateY(-100%)";
          mainHeader.style.opacity = "0";
          if (mefanAirWrap) mefanAirWrap.classList.add("active");
        } else {
          mainHeader.style.transform = "translateY(0)";
          mainHeader.style.opacity = "1";
          if (mefanAirWrap) mefanAirWrap.classList.remove("active");
        }
      } else {
        if (scrollTop > 200) {
          mainHeader.style.transform = "translateY(-100%)";
          mainHeader.style.opacity = "0";
          if (mobileAirNav) mobileAirNav.classList.add("active");
        } else {
          mainHeader.style.transform = "translateY(0)";
          mainHeader.style.opacity = "1";
          if (mobileAirNav) mobileAirNav.classList.remove("active");
        }
      }
    });

    /**********************
     * 移动端上下翻功能 (下拉面板展开/收起)
     **********************/
    if (window.innerWidth <= 768) {
      const mobileAirToggleBtn = document.getElementById("mobileAirToggleBtn");
      const mobileAirPanel = document.getElementById("mobileAirPanel");
      const mobileAirBlur = document.getElementById("mobileAirBlur");
      let panelOpen = false;
      function openPanel() {
        panelOpen = true;
        if (mobileAirToggleBtn) {
          mobileAirToggleBtn.textContent = "\u2303"; // 上箭头 (⌃)
        }
        if (mobileAirPanel) {
          mobileAirPanel.style.maxHeight = mobileAirPanel.scrollHeight + "px";
        }
        if (mobileAirBlur) {
          mobileAirBlur.classList.add("active");
        }
      }
      function closePanel() {
        panelOpen = false;
        if (mobileAirToggleBtn) {
          mobileAirToggleBtn.textContent = "\u2304"; // 下箭头 (⌄)
        }
        if (mobileAirPanel) {
          mobileAirPanel.style.maxHeight = "0";
        }
        if (mobileAirBlur) {
          mobileAirBlur.classList.remove("active");
        }
      }
      if (mobileAirToggleBtn && mobileAirPanel) {
        mobileAirToggleBtn.addEventListener("click", function() {
          panelOpen ? closePanel() : openPanel();
        });
      }
      if (mobileAirBlur) {
        mobileAirBlur.addEventListener("click", closePanel);
      }
    }
    // 其它功能（搜索、汉堡菜单、多级菜单等）保留不变
  })();

  // ====================== 模块3：Section2 卡片样式轮播 ======================
  (function(){
    const track = document.querySelector('.section2-track');
    const slides = track ? track.querySelectorAll('img') : [];
    const totalSlides = slides.length;
    let currentIndex = 0;
    const slideWidth = 1013 + 15; // 图片宽度 + 间隔

    function updateCarousel() {
      // ✅ 卡片样式轮播：滑动式切换
      const offset = currentIndex * slideWidth;
      if (track) {
        track.style.transform = `translateX(-${offset}px)`;
      }
      updateDots();
    }

    const dotElements = document.querySelectorAll('.dot');
    const slideDuration = 3000;
    let isPlaying = false;
    let autoPlayTimer = null;
    let progressStartTime = null;
    let progressAnimationId = null;

    function animateActiveDot(timestamp) {
      if (!progressStartTime) progressStartTime = timestamp;
      const elapsed = timestamp - progressStartTime;
      const progress = Math.min(elapsed / slideDuration, 1);
      const activeDot = dotElements[currentIndex];
      const newWidth = 12 + (28 * progress);
      activeDot.style.width = newWidth + 'px';
      if (progress < 1 && isPlaying) {
        progressAnimationId = requestAnimationFrame(animateActiveDot);
      }
    }

    function resetDots() {
      dotElements.forEach((dot, idx) => {
        dot.style.width = '12px';
        dot.style.backgroundColor = (idx === currentIndex) ? '#007aff' : '#ccc';
      });
    }

    function updateDots() {
      dotElements.forEach((dot, idx) => {
        dot.style.backgroundColor = (idx === currentIndex) ? '#007aff' : '#ccc';
        if (idx !== currentIndex) dot.style.width = '12px';
      });
    }

    dotElements.forEach(dot => {
      dot.addEventListener('click', () => {
        pauseAutoPlay();
        currentIndex = parseInt(dot.getAttribute('data-index'));
        progressStartTime = null;
        resetDots();
        updateCarousel();
        startAutoPlay();
      });
    });

    // 手机端触摸滑动
    let touchStartX = 0;
    let touchEndX = 0;

    if (track) {
      track.addEventListener("touchstart", function(e) {
        touchStartX = e.touches[0].clientX;
      }, { passive: true });

      track.addEventListener("touchend", function(e) {
        touchEndX = e.changedTouches[0].clientX;
        const deltaX = touchEndX - touchStartX;
        if (Math.abs(deltaX) > 50) {
          pauseAutoPlay(); // 停止自动播放
          if (deltaX < 0) {
            currentIndex = (currentIndex + 1) % totalSlides;
          } else {
            currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
          }
          updateCarousel();
        }
      });
    }

    const rightButton = document.getElementById('section2-rightButton');
    const playIcon = document.getElementById('section2-playIcon');

    function startAutoPlay() {
      isPlaying = true;
      if (playIcon) playIcon.textContent = '❚❚';
      progressStartTime = null;
      progressAnimationId = requestAnimationFrame(animateActiveDot);
      autoPlayTimer = setTimeout(nextSlide, slideDuration);
    }

    function pauseAutoPlay() {
      isPlaying = false;
      if (playIcon) playIcon.textContent = '►';
      clearTimeout(autoPlayTimer);
      autoPlayTimer = null;
      cancelAnimationFrame(progressAnimationId);
      resetDots();
    }

    function nextSlide() {
      resetDots();
      currentIndex++;
      if (currentIndex < totalSlides) {
        updateCarousel();
        progressStartTime = null;
        progressAnimationId = requestAnimationFrame(animateActiveDot);
        autoPlayTimer = setTimeout(nextSlide, slideDuration);
      } else {
        isPlaying = false;
        if (playIcon) playIcon.textContent = '↻';
      }
    }

    if (rightButton) {
      rightButton.addEventListener('click', () => {
        if (playIcon && playIcon.textContent === '↻') {
          currentIndex = 0;
          updateCarousel();
          resetDots();
          playIcon.textContent = '►';
          return;
        }
        if (isPlaying) {
          pauseAutoPlay();
        } else {
          if (currentIndex >= totalSlides) {
            currentIndex = 0;
            updateCarousel();
            resetDots();
          }
          startAutoPlay();
        }
      });
    }

    // 按钮进出动画 + 自适应移动
    const highlights = document.getElementById('section2-highlights');
    const buttonRow = document.getElementById('section2-buttonRow');
    const leftBtnContainer = document.getElementById('leftBtnContainer');
    const rightBtnContainer = document.getElementById('rightBtnContainer');

    function triggerButtonEntry() {
      leftBtnContainer.classList.remove('btn-hidden');
      rightBtnContainer.classList.remove('btn-hidden');
      leftBtnContainer.classList.add('btn-merged');
      rightBtnContainer.classList.add('btn-merged');
      setTimeout(() => {
        leftBtnContainer.classList.remove('btn-merged');
        rightBtnContainer.classList.remove('btn-merged');
        leftBtnContainer.classList.add('btn-left-animate');
        rightBtnContainer.classList.add('btn-right-animate');
        leftBtnContainer.style.pointerEvents = "auto";
        rightBtnContainer.style.pointerEvents = "auto";
      }, 600);
    }

    function triggerButtonExit() {
      leftBtnContainer.classList.remove('btn-left-animate');
      rightBtnContainer.classList.remove('btn-right-animate');
      leftBtnContainer.classList.add('btn-merged');
      rightBtnContainer.classList.add('btn-merged');
      setTimeout(() => {
        leftBtnContainer.classList.remove('btn-merged');
        rightBtnContainer.classList.remove('btn-merged');
        leftBtnContainer.classList.add('btn-hidden');
        rightBtnContainer.classList.add('btn-hidden');
      }, 600);
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          triggerButtonEntry();
        } else {
          triggerButtonExit();
        }
      });
    }, { threshold: 0 });

    if (highlights) {
      observer.observe(highlights);
    }

    function adjustButtonRowPosition() {
      if (!buttonRow) return;
      const brRect = buttonRow.getBoundingClientRect();
      if (brRect.bottom > window.innerHeight) {
        buttonRow.style.transform = "translateY(-90px)";
      } else {
        buttonRow.style.transform = "";
      }
    }
    window.addEventListener("scroll", adjustButtonRowPosition);

    // 在 DOMContentLoaded 里已经执行，这里直接调用一次初始化
    updateCarousel();

  })();

  // ====================== 模块4：Section3 滑动切换（样式、交互） ======================
  (function(){
    const track = document.getElementById("section3-track");
    const buttons = document.querySelectorAll(".section3-color-button");
    const prev = document.getElementById("section3-prev");
    const next = document.getElementById("section3-next");
    const pickerWrapper = document.getElementById("section3-picker-wrapper");
    const animateWrapper = document.getElementById("section3-animate-wrapper");
    const container = document.getElementById("section3-container");
    const styleLabel = document.getElementById("section3-style-label");

    let currentIndex = 0;
    let lastMoveState = false;

    function updateSlide(index) {
      // 原先使用 track.offsetWidth 来计算，每个项目逻辑保留
      if (track) {
        const slideWidth = track.offsetWidth;
        track.style.transform = `translateX(-${index * slideWidth}px)`;
      }
      buttons.forEach((btn, i) => {
        btn.classList.toggle("active", i === index);
      });
      currentIndex = index;
      updateButtonStates();
      if (styleLabel) {
        styleLabel.textContent = `Style ${index + 1}`;
      }
    }

    function updateButtonStates() {
      if (prev) prev.classList.toggle("disabled", currentIndex === 0);
      if (next) next.classList.toggle("disabled", currentIndex === buttons.length - 1);
    }

    buttons.forEach(button => {
      button.addEventListener("click", () => {
        const index = parseInt(button.getAttribute("data-index"));
        updateSlide(index);
      });
    });

    if (prev) {
      prev.addEventListener("click", () => {
        if (currentIndex > 0) updateSlide(currentIndex - 1);
      });
    }
    if (next) {
      next.addEventListener("click", () => {
        if (currentIndex < buttons.length - 1) updateSlide(currentIndex + 1);
      });
    }

    // IntersectionObserver
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateWrapper.classList.remove("collapse");
          animateWrapper.classList.add("expand");
        } else {
          animateWrapper.classList.remove("expand");
          animateWrapper.classList.add("collapse");
        }
      });
    }, { threshold: 0.5 });

    if (container) {
      observer.observe(container);
    }

    function adjustPickerPosition() {
      if (!pickerWrapper || !container) return;
      const pickerRect = pickerWrapper.getBoundingClientRect();
      const containerRect = container.getBoundingClientRect();
      const pickerHeight = pickerWrapper.offsetHeight;
      const distanceFromBottom = window.innerHeight - containerRect.bottom;
      const shouldMoveUp = (pickerRect.bottom > containerRect.bottom || distanceFromBottom < pickerHeight + 20);
      if (shouldMoveUp !== lastMoveState) {
        pickerWrapper.classList.toggle("move-up", shouldMoveUp);
        lastMoveState = shouldMoveUp;
      }
    }

    let scrollTimer;
    window.addEventListener("scroll", () => {
      clearTimeout(scrollTimer);
      scrollTimer = setTimeout(() => requestAnimationFrame(adjustPickerPosition), 80);
    });
    window.addEventListener("resize", () => requestAnimationFrame(adjustPickerPosition));

    // 移动端触摸左右滑动支持
    let startX = 0;
    let isDragging = false;
    const swipeThreshold = 50;

    if (track) {
      track.addEventListener("touchstart", (e) => {
        startX = e.touches[0].clientX;
        isDragging = true;
      });

      track.addEventListener("touchmove", () => {
        if (!isDragging) return;
      });

      track.addEventListener("touchend", (e) => {
        if (!isDragging) return;
        isDragging = false;
        const endX = e.changedTouches[0].clientX;
        const diff = endX - startX;
        if (diff > swipeThreshold && currentIndex > 0) {
          updateSlide(currentIndex - 1);
        } else if (diff < -swipeThreshold && currentIndex < buttons.length - 1) {
          updateSlide(currentIndex + 1);
        }
      });
    }

    // DOM 已加载，此处直接初始化
    updateButtonStates();
    updateSlide(currentIndex);

    // 等页面整体 load 完再做一次最终位置调整
    window.addEventListener("load", () => {
      requestAnimationFrame(adjustPickerPosition);
    });
  })();

}); // ← 只保留一次 DOMContentLoaded
</script>



</script>
</body>
</html>
